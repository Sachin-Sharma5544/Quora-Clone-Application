<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{title}}</title>
        <script
            src="https://kit.fontawesome.com/4e0194f4de.js"
            crossorigin="anonymous"
        ></script>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="/styles/navbar-styles.css" />
        <link rel="stylesheet" href="/styles/universal-styles.css" />
        <link rel="stylesheet" href="/styles/page-styles.css" />
    </head>
    <body>
        {{! Application header - imported from appNavbar partial}}

        <div>
            {{> appNavbar}}
        </div>

        <div class="main-body">
            <h2 style="color: black;"> Ask a question or Post an Article</h2>

            <div class="main-body__createArticle">
                <form action="/articles" method="POST">
                    <div  class="createArticle__AuthorWrapper">
                        <div class="createArticle__AuthorName">
                            <label for="authorName">Author Name:</label><br>
                            <input type="text" name="authorName" id="authorName" style="width: 100%;"><br><br>
                        </div>
                        <div  class="createArticle__AuthorInterest">
                            <label for="authorInterest">Author Interest:</label><br>
                            <input type="text" name="authorInterest" id="authorInterest"><br><br>
                        </div>
                    </div>

                    <div class="createArticle__content">
                        <div class="createArticle__contentQuestion">
                            <label for="authorQuestion">Question:</label><br>
                            <textarea name="authorQuestion" id="authorQuestion" rows="2"></textarea><br><br>
                        </div>
                        <div class="createArticle__contentAnswer">
                            <label for="authorAnswer">Answer:</label><br>
                            <textarea name="authorAnswer" id="authorAnswer"  rows="5"></textarea>
                        </div>
                    </div>
                    <div class="createArticle__submit">
                        <button type="submit">Submit </button>
                    </div>
                </form>
            </div>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"
        ></script>
    </body>
</html>